<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="item" type="com.testchambr.mycv.models.Skill"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_standard">

        <TextView
            android:id="@+id/objectSkill_titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_medium"
            android:lineSpacingExtra="@dimen/text_view_line_spacing_extra"/>

        <TextView
            android:id="@+id/objectSkill_detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.details}"
            android:textColor="@color/textColorPrimary"
            android:layout_below="@id/objectSkill_titleTextView"
            android:layout_marginTop="@dimen/margin_standard"
            android:textSize="@dimen/font_size_small"
            android:lineSpacingExtra="@dimen/text_view_line_spacing_extra"/>

    </RelativeLayout>

</layout>